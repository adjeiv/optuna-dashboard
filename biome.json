{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"files": {
		"include": [
			"optuna_dashboard/ts/**/*.ts",
			"optuna_dashboard/ts/**/*.tsx",
			"standalone_app/src/**/*.ts",
			"standalone_app/src/**/*.tsx",
			"vscode/src/**/*.ts",
			"vscode/src/**/*.tsx",
			"tslib/**/*.ts",
			"tslib/**/*.tsx",
			"tslib/**/*.mjs",
			"jupyterlab/src/**/*.ts",
			"jupyterlab/src/**/*.tsx"
		],
		"ignore": [
			"tslib/react/src/components/PlotlyColorTemplates.ts",
			"tslib/**/pkg/*",
			"tslib/react/types/*"
		]
	},
	"linter": {
		"ignore": ["optuna_dashboard/ts/**/*.ts", "optuna_dashboard/ts/**/*.tsx"]
	},
	"javascript": {
		"formatter": {
			"trailingComma": "es5",
			"indentWidth": 2,
			"indentStyle": "space",
			"semicolons": "asNeeded",
			"quoteStyle": "double"
		}
	}
}
